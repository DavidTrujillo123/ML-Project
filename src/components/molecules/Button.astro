---
import type { HTMLAttributes } from "astro/types";

interface Props {
    label?: string;
    type: HTMLAttributes<"button">["type"];
}

const { type, label } = Astro.props;
---

<button
    type={type ?? "button"}
    class="text-white bg-slate-900 rounded-xl w-8/12 h-12 mx-auto my-auto"
>
    {label ?? "Enviar"}
</button>
