---
import type { HTMLAttributes } from 'astro/types';

interface Props {
    label?: string;
    id?: string;
    options: string[];
    required?: boolean;
}

const { label, id, options, required } = Astro.props;
---

<div class="mb-5 w-full">
    <label for={id} class="block mb-2 text-sm font-medium text-ns-base">
        {label}
    </label>
    <select
        id={id}
        class="bg-gray-50 border border-gray-300 text-ns-base text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"
        required={required ?? false}
    >
        <option value="" disabled selected hidden>Selecciona una opci√≥n</option>
        {options.map(option => (
            <option value={option}>
                {option}
            </option>
        ))}
    </select>
</div>
